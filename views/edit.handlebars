<div class="container">
  <form class="form-horizontal" action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label class="col-sm-2 control-label">名稱*：</label>
      <div class="col-sm-10">
        <input type="text" name="name" value="{{record.name}}" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">日期*：</label>
      <div class="col-sm-10">
        <input type="date" name="date" value="{{record.date}}" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">類別*：</label>
      <div class="col-sm-10">
        <select name="category" class="form-control">
          <option disabled>select</option>
          {{!-- 利用hidden屬性在選項中隱藏預設項目 --}}
          <option hidden="hidden" value="{{record.category}}" selected>{{record.category}}</option>
          <option value="housing">家居物業</option>
          <option value="transportation">交通出行</option>
          <option value="entertainment">休閒娛樂</option>
          <option value="food">餐飲食品</option>
          <option value="others">其他</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">金額*：</label>
      <div class="col-sm-10">
        <input type="number" name="amount" class="form-control" value="{{record.amount}}">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-outline-primary">修改</button>
      </div>
    </div>
  </form>
</div>